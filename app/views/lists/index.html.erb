<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/7991486/pexels-photo-7991486.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">
  <div class="container d-flex justify-content-center">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<% if @lists.size > 0 %>
  <ul class="list-group">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "link-offset-2 link-underline link-underline-opacity-0 text-dark" do%>
        <li class="list-group-item d-flex justify-content-between align-items-center fs-2">
            <%= list.name %>
            <div>
              <span class="badge text-bg-primary rounded-pill">
                <%= list.bookmarks.size %>
              </span>
              <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "are you sure?"}, class: "text-dark" do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </div>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p class="text-center text-secondary">
    you do not have any lists.
  </p>
  <div class="d-flex justify-content-center">
    <%= link_to "create a new list", new_list_path, class: "btn btn-primary" %>
  </div>
<% end %>
