<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/7991486/pexels-photo-7991486.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">
  <div class="container d-flex justify-content-center">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<% if @lists.size > 0 %>
  <div class="row mb-3">
    <% @lists.each do |list| %>
      <%= render "list", list: list %>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-secondary">
    you do not have any lists.
  </p>
  <div class="d-flex justify-content-center">
    <%= link_to "create a new list", new_list_path, class: "btn btn-primary" %>
  </div>
<% end %>
